/* Write the function any(s1, s2), which returns the first location in the string s1 where any character from the string s2 occurs, or -1 if s1 contains no characters from s2.
(The standard library function strpbrk does the same job but returns a pointer instead of an index.) */
#include <stdio.h>

int any(char s1[], char s2[]);

int main() {
    char s1[100], s2[100];

    printf("Enter first string: ");
    fgets(s1, sizeof(s1), stdin);

    printf("Enter second string: ");
    fgets(s2, sizeof(s2), stdin);

    int pos = any(s1, s2);

    if (pos != -1)
        printf("First occurrence at index: %d\n", pos);
    else
        printf("No matching character found.\n");

    return 0;
}

int any(char s1[], char s2[]) {
    int i, j;

    for (i = 0; s1[i] != '\0'; i++) {
        for (j = 0; s2[j] != '\0'; j++) {
            if (s1[i] == s2[j])
                return i;   // return first index
        }
    }
    return -1;  // no match
}
