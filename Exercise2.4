/* Write an alternative version of squeeze(s1, s2) that deletes each character in s1 that matches any character in s2. */
#include <stdio.h>

void squeeze(char s1[], char s2[]);

int main() {
    char s1[100], s2[100];

    printf("Enter first string: ");
    fgets(s1, sizeof(s1), stdin);

    printf("Enter second string: ");
    fgets(s2, sizeof(s2), stdin);

    squeeze(s1, s2);

    printf("Result after squeeze: %s", s1);
    return 0;
}

void squeeze(char s1[], char s2[]) {
    int i, j, k;
    int found;

    for (i = j = 0; s1[i] != '\0'; i++) {
        found = 0;
        for (k = 0; s2[k] != '\0'; k++) {
            if (s1[i] == s2[k]) {
                found = 1;  // character match found
                break;
            }
        }
        if (!found) {
            s1[j++] = s1[i];  // keep only non-matching characters
        }
    }
    s1[j] = '\0';
}
